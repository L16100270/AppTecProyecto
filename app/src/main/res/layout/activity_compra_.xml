<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Compra_Activity">

    <TextView
        android:id="@+id/textViewBanos"
        android:layout_width="155dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="8dp"
        android:text="BaÃ±os"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/txtBanosC"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginStart="29dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textViewBanos"
        app:layout_constraintTop_toBottomOf="@+id/txtHabitacionesC" />

    <ImageView
        android:id="@+id/ivImagenCasaC"
        android:layout_width="404dp"
        android:layout_height="254dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/casa" />

    <TextView
        android:id="@+id/txtDireccionC"
        android:layout_width="341dp"
        android:layout_height="47dp"
        android:layout_marginTop="44dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.571"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivImagenCasaC" />

    <TextView
        android:id="@+id/txtHabitacionesC"
        android:layout_width="71dp"
        android:layout_height="36dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="116dp"
        android:text="TextView"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDireccionC" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="155dp"
        android:layout_height="36dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="20dp"
        android:text="Habitaciones"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDireccionC" />

    <TextView
        android:id="@+id/txtCocinaC"
        android:layout_width="155dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="52dp"
        android:text="Incluye Cocina"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBanos" />

    <TextView
        android:id="@+id/txtPrecioC"
        android:layout_width="164dp"
        android:layout_height="40dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="28dp"
        android:text="TextView"
        android:textColor="#088A0B"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txtCocinaC"
        app:layout_constraintTop_toBottomOf="@+id/txtBanosC" />

    <TextView
        android:id="@+id/txtComedorC"
        android:layout_width="155dp"
        android:layout_height="25dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="12dp"
        android:text="Incluye Comedor"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtCocinaC" />

    <Button
        android:id="@+id/btnComprarC"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="228dp"
        android:layout_marginBottom="16dp"
        android:background="#52CAFA"
        android:text="Comprar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnContactarC"
        android:layout_width="155dp"
        android:layout_height="37dp"
        android:background="#52CAFA"
        android:text="Contactar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.156"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/swDolares" />

    <Switch
        android:id="@+id/swDolares"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="116dp"
        android:background="#F9FBFB"
        android:text="USD"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintStart_toEndOf="@+id/txtComedorC"
        app:layout_constraintTop_toBottomOf="@+id/txtPrecioC" />
</androidx.constraintlayout.widget.ConstraintLayout>